@model GreatTrade.Models.Answer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/css/questions.css">

<div id="container">
    
    <div class="containerQuestions">

        <div id="titleQuestion">Contestar pregunta</div>
        <div id="questDesc">Pregunta: @ViewData["QuestionDesc"]</div>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <label asp-for="Description" class="control-label"> Respuesta</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Contestar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>