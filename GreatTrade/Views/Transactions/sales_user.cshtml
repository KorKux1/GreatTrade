                </li>
                <li>
                    <img src="upload/item_04.jpg" alt="" class="alignleft img-responsive">
                    <h4><a href="single-item.html">Login Box (Custom)</a></h4>
                    <small><a href="single-item.html"><i class="fa fa-eye"></i> 412</a></small>
                    <small><a href="single-item.html"><i class="fa fa-comment-o"></i> 55</a></small>
                </li>
            </ul>
            <a href="shop-favorites.html" class="btn btn-primary">Go to Favorites</a>
        </nav>



        <section class="section single-wrap">
            <div class="container">
                <div class="page-title">
                    <div class="row">
                        <div class="col-sx-12 text-center">
                            <h3>Ventas Pendientes</h3>
                            <div class="bread">
                                <ol class="breadcrumb">
                                    <li><a href="#">Inicio</a></li>
                                    <li class="active">Volver</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="content-top">
                    <div class="row">
                        <div class="col-sx-6 col-sm-6">
                            <div class="custommenu hidden-xs">
                                <a id="showLeft" href="#" title="" class="bt-menu-trigger"><i class="fa fa-bars"></i> <img src="upload/fav.png" alt=""></a>
                            </div>
                        </div>

                        <div class="col-sm-6 col-xs-12 cen-xs text-right">
                            <ul class="list-inline social">
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
                                <li><a href="#"><i class="fa fa-behance"></i></a></li>
                                <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
                            </ul>
                        </div>
                    </div><!-- end row -->
                </div><!-- end content top -->

                <div class="content-before">
                    <div class="row">
                        <div class="col-md-12 col-sx-12 cen-xs">
                            <form class="dropForm">
                                <div class="input-prepend">
                                    <div class="btn-group">
                                        <select name="orderby" class="selectpicker">
                                            <option>Buscar por: </option>
                                            <option>Comprador</option>
                                            <option>Artículo</option>
                                        </select>
                                    </div>
                                    <input type="text" class="form-control" placeholder="Buscar venta pendiente">
                                    <button class="btn btn-primary" tabindex="-1"><i class="fa fa-search"></i></button>
                                </div>
                            </form>
                        </div>
                    </div><!-- end row -->
                </div><!-- end content before -->
                <div class="content boxs">
                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <div class="storelist panel panel-info">
                                <div class="panel-body">
                                    <div class="form-group row wow fadeIn">


                                        @foreach (var item in Model)
                                        {
                                            <div class="col-sm-2 col-xs-12">
                                                <a href="single-item.html" class="screenshot" data-gal="@item.Product.Photos.ElementAt(0).Route" title="@item.Product.Description"><img class="img-responsive img-thumbnail" src=@item.Product.Photos.ElementAt(0).Route alt=""></a>
                                            </div>
                                            <div class="col-sm-5 col-xs-12">
                                                <h4><a href="#">@item.Product.Title</a></h4>
                                                <ul>
                                                    <li><a href="#"><i class="fa fa-user"></i> @item.Buyer.FirstName</a></li>
                                                    <li><a href="mailto:@item.Buyer.Email"><i class="fa fa-envelope-o"></i> @item.Buyer.Email</a></li>
                                                    <li><a href="#"><i class="fa fa-mobile-phone"></i> +57 320 5478961</a></li>
                                                    <li><a href="#"><i class="fa fa-folder-open-o"></i>@item.Status</a></li>
                                                </ul>
                                            </div>
                                            <div class="col-sm-2 col-xs-12">
                                                <h4>Detalles</h4>
                                                <ul>

                                                    <li><a href="#"><i class="fa fa-trademark"></i> @item.Id</a></li>
                                                    <li><a href="#"><i class="fa fa-sort-amount-asc"></i> @item.Amount</a></li>
                                                    <li><a href="#"><i class="fa fa-money"></i> @item.TotalPurchase</a></li>
                                                    <li><a href="#"><i class="fa fa-calendar-times-o"></i> @item.Product.Date</a></li>

                                                </ul>

                                            </div>

                                            <div class="col-xs-12">

                                                <a asp-action="sales_user" asp-route-wasAccepted="@true" asp-route-wasRejected="@false" asp-route-idT="@item.Id" asp-route-id="@item.Product.Id" asp-route-amount="@item.Amount" type="submit" id="submit" class="btn btn-success">Aprobar</a>
                                                <a asp-action="sales_user" asp-route-wasAccepted="@false" asp-route-wasRejected="@true" asp-route-idT="@item.Id" asp-route-id="@item.Product.Id" type="submit" id="submit" class="btn btn-success btn-danger">Rechazar</a>

                                            </div>



                                        }

                                    </div><!-- end form-group -->
                                </div><!-- end panel body -->
                            </div><!-- end storelist -->
                        </div><!-- end col -->
                    </div><!-- end row -->
                </div><!-- end content -->

                <div class="content-after text-center boxs">
                    <div class="row">
                        <div class="col-md-12">
                            <nav class="pagination-wrapper">
                                <ul class="pagination">
                                    <li><a href="#">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#">4</a></li>
                                    <li><a href="#">5</a></li>
                                    <li>
                                        <a href="#" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div><!-- end row -->
                </div><!-- end content after -->

                <div class="content-message boxs">
                    <div class="row">

                    </div><!-- end row -->
                </div><!-- end content message -->
            </div><!-- end container -->
        </section>

        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-5">
                        <div class="media cen-xs">
                            <p>
                                &copy; Catalog INC. 2016 - All Rights Reserverd.<br>
