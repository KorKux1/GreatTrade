@model GreatTrade.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/ProfileLayout.cshtml";
}

<div style="margin:10px 0 0 20px; color:white">
    <h2 style="color:white">Crear</h2>

    <h4 style="color:white">Categoria</h4>
