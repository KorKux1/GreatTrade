<body class="nobg">

    <!-- START SITE -->
    <div id="wrapper">



        <section class="section single-wrap">
            <div class="container">
                <div class="page-title">
                    <div class="row">
                        <div class="col-sx-12 text-center">
                            <h3>Edita tu perfil</h3>
                            <div class="bread">
                                <ol class="breadcrumb">
                                    <li><a href="#">Profiles</a></li>
                                    <li class="active">Edit</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="content-top">
                    <div class="row">
                        <div class="col-sx-6 col-sm-6">
                            <div class="custommenu hidden-xs">
                                <a id="showLeft" href="#" title="" class="bt-menu-trigger"><i class="fa fa-bars"></i> <img src="~/lib/theme/upload/fav.png" alt=""></a>
                            </div>
                        </div>

                        <div class="col-sm-6 col-xs-12 cen-xs text-right">
                            <ul class="list-inline social">
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
                                <li><a href="#"><i class="fa fa-behance"></i></a></li>
                                <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
                            </ul>
                        </div>
                    </div><!-- end row -->
                </div><!-- end content top -->

                <div class="content-before">
                    <div class="row">
                        <div class="col-md-6 col-sx-12 cen-xs">
                            <form class="dropForm">
                                <div class="input-prepend">
                                    <input type="text" class="form-control" placeholder="Search anything here.">
                                    <button class="btn btn-primary" tabindex="-1"><i class="fa fa-search"></i></button>
                                </div>
                            </form>
                        </div>
                    </div><!-- end row -->
                </div><!-- end content before -->

                <div class="content boxs">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <div class="widget-title">
                                <h4 class="display-4">Completa la información del producto</h4>
                            </div><!-- end widget-title -->
                            <form class="uploaditem" asp-action="Edit" enctype="multipart/form-data" methoD="post">
                                <div style="display:none;" class="form-group">
                                    <label asp-for="UserId" class="control-label"></label>
                                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                                    <span asp-validation-for="UserId" class="text-danger"></span>
                                </div>
                                <div class="space">
                                    <label>Descripción:</label>
                                    <textarea asp-for="Description" name="Description" id="PCategory" class="form-control"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="space">
                                    <label>Intereses: </label>
                                    <textarea asp-for="Interests" id="PSubCategory" name="SubCategoryId" class="form-control" asp-items=""></textarea>
                                    <span asp-validation-for="Interests" class="text-danger"></span>
                                </div>

                                <div class="space">
                                    <label>Facebook</label>
                                    <input asp-for="Facebook" name="Title" class="form-control" id="PName" required="" type="text">
                                    <span asp-validation-for="Facebook" class="text-danger"></span>
                                </div>

                                <div class="space">
                                    <label>Twitter </label>
                                    <input asp-for="Twitter" class="form-control" placeholder="Description">
                                </div>

                                <div class="space">
                                    <label>Instagram </label>
                                    <input asp-for="Instagram" class="form-control" placeholder="Description">
                                </div>

                                <div class="space text-center">
                                    <label>Agrega una foto</label>
                                    <div class="fileupload fileupload-new" data-provides="fileupload">
                                        <div class="fileupload-preview thumbnail"></div>
                                        <br>
                                        <span class="btn btn-primary btn-file">
                                            <span class="fileupload-new">Select image</span>
                                            <span class="fileupload-exists">Change</span>
                                            <input asp-for="Avatar" name="image" id="image" type="file" multiple="multiple">
                                        </span>
                                        <a href="#" class="btn btn-primary fileupload-exists" data-dismiss="fileupload">Remove</a>
                                    </div>
                                </div>
                                <input type="hidden" asp-for="Id" />


                                <div class="space">
                                    <input onclick="" type="submit" value="Guardar Cambios" class="btn btn-primary btn-block" />
                                </div>

                            </form>
                        </div><!-- end col -->
                    </div><!-- end row -->
                </div><!-- end content -->

                <br>

            </div><!-- end container -->
        </section>

    </div><!-- end wrapper -->
    <!-- END SITE -->

    <script src="~/lib/theme/js/jquery.min.js"></script>
    <script src="~/lib/theme/js/bootstrap.js"></script>
    <script src="~/lib/theme/js/custom.js"></script>

</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
